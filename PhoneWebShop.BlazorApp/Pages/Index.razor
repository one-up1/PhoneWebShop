@using PhoneWebShop.Domain.Entities;

@page "/"

<h3>This webshop has @phones.Count phones!</h3>
<br />

<ListGroup>
    @foreach (Phone phone in phones)
    {
        <ListGroupItem>@phone.FullName</ListGroupItem>
    }
</ListGroup>

@code {
    private List<Phone> phones;

    protected override void OnInitialized()
    {
        base.OnInitialized();

        Brand samsung = new Brand()
        {
            Name = "Samsung"
        };

        Brand huawei = new Brand()
        {
            Name = "Huawei"
        };

        phones = new List<Phone>()
        {
            new()
            {
                Brand = samsung,
                Type = "Galaxy A51"
            },
            new()
            {
                Brand = samsung,
                Type = "Galaxy A22"
            },
            new()
            {
                Brand = samsung,
                Type = "Galaxy A03"
            },
            new()
            {
                Brand = huawei,
                Type = "P50"
            },
            new()
            {
                Brand = huawei,
                Type = "P51"
            },
            new()
            {
                Brand = huawei,
                Type = "P52"
            }
        };
    }
}